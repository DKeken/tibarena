{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": ".",
		"declaration": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"#/*": ["src/*"]
		},
		"strict": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["ES2015", "DOM"]
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "dist"]
}
